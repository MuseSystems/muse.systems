{
  "name": "muse.systems",
  "version": "1.0.0",
  "description": "A theme for Muse System related marketing sites.  Based on Blist/https://github.com/apvarun/blist-hugo-theme by Varun A P.",
  "main": "index.js",
  "repository": "https://github.com/apvarun/blist-hugo-theme",
  "author": "Steven C. Buttgereit",
  "license": "Apache v2.0",
  "scripts": {
    "dev:css": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/style.css -w",
    "dev:hugo": "hugo server",
    "dev": "run-p dev:*",
    "build:css": "NODE_ENV=production npx tailwindcss -i ./assets/css/main.css -o ./static/css/style.css -m",
    "build:hugo": "hugo",
    "build": "run-s build:*"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwind": "^2.2.12",
    "tailwindcss": "^3.3.1"
  }
}
